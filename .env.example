# ===== Wallet Configuration =====
MASTER_PRIVATE_KEY=your_private_key_here
GNOSIS_SAFE_ADDRESS=0x...

# ===== CLOB API Credentials =====
CLOB_API_KEY=your_api_key
CLOB_SECRET=your_secret
CLOB_PASSPHRASE=your_passphrase

# ===== Builder API Credentials (for relayer redemption) =====
BUILDER_API_KEY=your_builder_api_key
BUILDER_SECRET=your_builder_secret
BUILDER_PASSPHRASE=your_builder_passphrase

# ===== Trading Parameters =====
BET_AMOUNT_USDC=10
MIN_PRICE_THRESHOLD=0.99
TARGET_CRYPTOS=btc,eth,sol

# ===== Timing (seconds) =====
# Default trading window for all cryptos
TRADING_WINDOW_SECONDS=10
# Per-crypto trading windows (optional): "btc:60,eth:10,sol:10"
TRADING_WINDOWS=btc:60,eth:10,sol:10

# ===== Network =====
POLYGON_RPC_URL=https://polygon-rpc.com

# ===== Bot Behavior =====
LOG_LEVEL=info
DRY_RUN=false

# ===== Docker Compose Services =====
# Database
DATABASE_URL=postgresql://polymarket:polymarket_secret@postgres:5432/polymarket
REDIS_URL=redis://redis:6379

# Worker configuration
WORKER_CONCURRENCY=10

# API configuration
PORT=3001
CORS_ORIGIN=http://localhost:3000
